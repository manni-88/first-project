<body>
    <div class="navbar">
        <h1>Hodlinfo</h1>
        <div class="buttons-container">
            <button class="button inr">INR</button>
            <button class="button btc">BTC</button>
            <button class="button buy-btc">BUY-BTC</button>
        </div>
        <button class="connect-telegram">Connect Telegram</button>
        <label class="switch">
            <input type="checkbox">
            <span class="slider round"></span>
        </label>
    </div>

    <div class="trade">
        <h2>Best Price to Trade</h2>
    </div>
    <div class="container">
        <div class="timePercentage">
            <p class="percentage">1.0 %</p>
            <p class="timespam">5 Mins</p>
        </div>
        <div class="timePercentage">
            <p class="percentage">3.0% </p>
            <p class="timespam">1 Hour</p>
        </div>
        <div class="timePercentage">
            <h2>4528795</h2>
        </div>
        <div class="timePercentage">
            <p class="percentage">4.0% </p>
            <p class="timespam">1 Day</p>
        </div>
        <div class="timePercentage">
            <p class="percentage">8.3%</p>
            <p class="timespam">7 Days</p>
        </div>
    </div>
    <h3 style="margin-left: 550px;">Average BTC/INR set price including commission</h3>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Last Trade Price</th>
                <th>Buy/Sell Price Difference</th>
                <th>Difference</th>
                <th>Base Unit</th>
            </tr>
        </thead>
        <tbody><% data.forEach((ticker, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= ticker.name %></td>
                <td><%= ticker.sell %></td>
                <td><%= ticker.buy %>/<%= ticker.sell %></td>
                <% 
                    // Calculate the percentage difference between buy and sell prices
                    const percentageDifference = ((ticker.buy - ticker.sell) / ticker.sell) * 100;
                    // Round the percentage difference to three decimal places
                    const roundedPercentageDifference = percentageDifference.toFixed(3);
        
                    // Apply different styles based on the sign of the percentage difference
                    const color = percentageDifference > 0 ? 'green' : 'red';
                %>
                <td style="color: <%= color %>"><%= roundedPercentageDifference %></td>
                <td><%= ticker.base_unit %></td>
            </tr>
        <% }); %>
        
        </tbody>
    </table>

