.trade {
    text-align: center;
    margin-top: 100px; /* Adjusted margin-top */
}

.trade h2 {
    color: #ff9900; /* Orange color */
}

.container {
    display: flex;
    flex-wrap: wrap; /* Wrapped container */
    justify-content: space-around; /* Evenly spaced items */
    align-items: center;
    padding: 20px;
    overflow-x: auto;
    margin-top: 20px; /* Adjusted margin-top */
}

.timePercentage {
    flex: 1; /* Each item takes equal space */
    padding: 20px;
    border: 1px solid #333; /* Darker border */
    border-radius: 10px;
    text-align: center;
    margin: 10px; /* Increased margin */
}

.percentage {
    font-size: 28px; /* Larger font size */
    font-weight: bold;
    margin-bottom: 10px;
    color: #ff9900; /* Orange color */
}

.timespam {
    font-size: 16px;
    color: #999;
}

h2 {
    font-size: 36px;
    color: #fff;
}

h3 {
    font-size: 18px; /* Smaller font size */
    margin-top: 10px;
    color: #ddd;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 50px; /* Adjusted margin-top */
}

th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #333; /* Darker border */
}

th {
    background-color: #282828; /* Darker background for table header */
    color: #fff;
}

td {
    color: #ff9900; /* Orange color for table data */
}



